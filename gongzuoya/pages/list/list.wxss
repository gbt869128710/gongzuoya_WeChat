/* pages/list/list.wxss */
@import "../../utils/font.wxss";
page{
    background: #fafafa;
}
.content{
    background: #fff;
}
.top{
    position: fixed;
    top: 0;
    left: 0;
	z-index: 3;
    width: 100%;
    height: 80px;
    background: #fff;
	box-shadow: 0px 0px 20px #999;
