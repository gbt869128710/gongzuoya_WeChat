/* pages/header/header.wxss */
@import "../../utils/font.wxss";
.nav{
  width: 100%;
  height: 55px;
  background: #fff;
}
.selectCity{
  float: left;
  overflow: hidden;
  padding: 0 3%;
  width: 11%;
  line-height: 65px;
  font-size: 0.8rem;
  white-space: nowrap;
  color: #666;
}
.inputValue{
  float: left;
  padding: 0 2%;
  margin-top: 15px;
  width: 64%;
  border: 1px solid #ccc;
  border-radius: 15px;
}
.icon-search{
  float: left;
  color: #999;
  font-size: 0.9rem;
  line-height: 30px;
}
.inputValue input{
  width: 88%;
  line-height: 20px;
  font-size: 0.9rem;
  color: #666;
  padding:0 2%;
  float: left;
}
.btnSearch{
  float: right;
  margin:0 3% 0 0;
}
.btnSearch .cancel{
  border: none;
  color: #666;
  font-size: 0.8rem;
  line-height: 65px;
}