/* pages/job_collect/job_collect.wxss */
@import "../../utils/font.wxss";
.header{
  width: 100%;
  height: 100px;
  background: #00b380;
  box-shadow: 0px 0px 30px #00b380;
  margin-bottom: 20px;
}
.header-logo{
  width: 100%;
  height: 40px;
  background: #00b380;
}
.header-logo image{
  margin: 0 auto;
  display: block;
  height: 40px;
  width: 100px;
}
.btn{
position:relative;
display:block;
width: 90%;
margin: 0 auto;
height: 30px;
margin-top: 15px;
padding-left:14px;
padding-right:14px;
box-sizing:border-box;
font-size:0.8rem;
line-height: 30px;
text-align:center;
text-decoration:none;
border-radius:15px;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color:#000000;
background-color:#F8F8F8;
color: #999;
}

.line{
  width: 80%;
  height: 10px;
  margin:30px auto 20px auto;
  border-bottom: 1px solid #eee;
}
.you{
  margin: 0 auto;
  width: 60%;
  background: #fff;
  text-align: center;
  font-size: 0.9rem;
  color: #666;
}
.center{
  padding: 10px;
  display: flex;
  align-items:center;
  border-bottom: 1px solid #f5f5f5;
}
.icon-namber{
  color: #fff;
  font-size: 0.8rem;
  text-align: center;
}
.center-img{
  width: 60px;
  height: 60px;
  border: 1px solid #f5f5f5;
}
.center-img image{
  width: 60px;
  height: 60px;
}
.center-msg{
  flex: 1;
  margin-left: 5%;
}
.center-job{
  display: inline-block;
  width: 70%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 0.9rem;
}
.center-money{
  float: right;
  color: #ff0000;
  font-size: 0.7rem;
}
.center-name{
  font-size: 0.7rem;
  color: #666;
}
.center-city{
  margin-right: 0.5rem;
  font-size: 0.7rem;
  color: #999;
}
.center-msg-bottom{
  font-size: 0.8rem;
  color: #999;
}
.center-line{
  margin: 0 2%;
  color: #ddd;
}
.center-issue{
  float: right;
  margin-top:0.1rem;
  color: #999;
  font-size: 0.7rem;
}
.footer{
  text-align: center;
  color: #999;
  font-size: 0.7rem;
  line-height: 40px;
}