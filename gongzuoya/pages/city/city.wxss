/* pages/city/city.wxss */
page {
    background: #f5f5f5;
}
.content-block-bottom {
    border-top: 1px solid #ccc;
    padding: 0 4%;
    width: 92%;
    height: calc(100% - 50px);
}
.p {
    line-height: 50px;
    color: #999;
    font-size: 30rpx;
}
.city-li {
    float: left;
    width: calc(92% / 3 - 2px);
    height: 30px;
    border: 1px solid #ccc;
    text-align: center;
    margin-right: 4%;
    margin-bottom: 10px;
    line-height: 30px;
    background: #fff;
    font-size: 30rpx;
}
.city-li:nth-child(3n) {
    margin-right: 0;
}