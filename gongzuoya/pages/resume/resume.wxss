/* pages/resume/resume.wxss */
@import "../../utils/font.wxss";
page{
    background: #f5f5f5;
}
.my{
    margin-bottom: 20rpx;
    padding: 40rpx 5% 20rpx 5%;
    height: 390rpx;
    background: #fff;
}
.my-top{
    width: 100%;
    height: 210rpx;
}
.my-top-left{
    float: left;
    width: calc(100% - 130rpx);
}
.my-top-left-top{
    display: flex;
    align-items: center;
}
.my-top-left-name{
    margin-right: 20rpx;
    font-size: 50rpx;
    font-weight: bold;
}
.icon-bianji{
    color: #999;
    font-size: 30rpx;
}
.redact{
    margin-left: 10rpx;
}
.my-top-left-center{
    font-size: 28rpx;
    color: #333;
    line-height: 40rpx;
}
.my-top-left-footer{
    font-size: 28rpx;
    color: #999;
    line-height: 40rpx;
}
.my-top-right{
    float: right;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background: #dae3e2;
}
.my-top-right image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}
.my-center{
    height: 100rpx;
    padding-bottom: 10rpx;
    border-bottom: 1px solid #eee;
}
.my-center-top{
    display: flex;
    align-items: center;
}
.tc{
    width: 28rpx;
    height: 28rpx;
}
.phone{
    margin-left: 30rpx;
    font-size: 28rpx;
    color: #333;
    line-height:50rpx;
}
.my-footer{
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.my-footer-left{
    font-size: 28rpx;
    color: #333;
    line-height:90rpx;
    height: 90rpx;
}
.my-footer-right{
    font-size: 26rpx;
    color: #999;
    line-height:40rpx;
}
.now{
    font-size:26rpx;
    color:#999;
    line-height:40rpx;
}
.icon-jiankuohaoxiyou{
    font-size:26rpx;
    color:#999;
    line-height:40rpx;
}
.job{
    margin-bottom: 20rpx;
    padding: 0 5%;
    height: 230rpx;
    background: #fff;
}
.edit{
    font-size: 26rpx;
    color: #00b380;
    line-height:50rpx;
}
.job-top{
    padding: 30rpx 0;
}
.job-top-name{
    font-size: 34rpx;
    color: #000;
    font-weight: bold;
    line-height:42rpx;
}
.job-top-expect{
    font-size: 26rpx;
    color: #999;
    line-height:40rpx;
}
.education{
    margin-bottom: 20rpx;
    padding: 0 5%;
    background: #fff;
}
.education-top{
    width: 100%;
    overflow: hidden;
    padding: 30rpx 0;
    border-bottom:1px solid #eee;
}
.education-top-center{
    overflow: hidden;
    padding-bottom: 30rpx;
}
.education-top-left{
    float: left;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: #dae3e2;
    text-align: center;
}
.icon-xuexiao{
    line-height: 100rpx;
    font-size: 60rpx;
    color: #fff;
}
.icon-gongsi{
    line-height: 100rpx;
    font-size: 70rpx;
    color: #fff;
}
.education-top-right{
    float: right;
    width: calc(100% - 130rpx);
}
.school{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.plus{
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.icon-anonymous-iconfont{
    margin-right: 16rpx;
    font-size:24rpx;
    font-weight: bold;
    color: #00b380;
}
.education-content-top{
    font-size:26rpx;
    color:#333;
    line-height:70rpx;
}
.ego-top {
    width:100%;
    padding:30rpx 0;
    display:flex;
    flex-wrap:wrap;
    justify-content:center;
}
.ego {
    padding:0 10px;
    margin:5px;
    border:1px solid #eee;
    border-radius:24rpx;
    line-height:48rpx;
    font-size:26rpx;
    color:#999;

}
.project{
    width: 100%;
}
.project-name{
    font-size:26rpx;
    color:#00b380;
    line-height:40rpx;
}
.powered{
    line-height: 80rpx;
    font-size: 24rpx;
    color: #999;
    text-align: center;
}