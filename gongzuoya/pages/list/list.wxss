form{
  width: 100%;
  height: 30px;
}
.search{
  width: 90%;
  margin: 0 auto;
  margin-top: 5px;
  height: 30px;
  padding: 0 10px;
  border: 1px solid #ccc;
  border-radius: 15px;
  display: flex;
  justify-content:space-between;
  align-items:center;
