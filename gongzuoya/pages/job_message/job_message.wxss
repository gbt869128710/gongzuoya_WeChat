/* pages/job_message/job_message.wxss */
@import "../../utils/font.wxss";
page{
    background: #fafafa;
}
.firm-top{
    width: 94%;
    padding: 0 3%;
    padding-top: 10px;
    height: 90px;
    border-bottom: 1px solid #eee;
    background: #fff;
}
.firm-top-margin{
    margin-bottom: 10px;
    border-bottom: none;
}
.firm-top-border{
    margin-top: 10px;
    width: 100%;
    height: auto;
    overflow: hidden;
    padding: 0;
}
.firm-top-center{
    width: 100%;
}
.firm-top-left{
    float: left;
    margin-right: 2%;
}
.firm-top-right{
    float: right;
    width: calc(98% - 50px);
}
.firm-top-left image{
    width: 50px;
    height: 50px;
    border-radius: 50%;
}
.firm-name{
    padding-left:3px;
    color: #333;
}
.firm-name image{
    width: 50px;
    height: 20px;
    position: relative;
    top: 5px;
}
.firm-message{
    margin-top: 5px;
    font-size: 0.8rem;
    color: #666;
}
.center-city{
    padding:0 3px;
    border-right: 1px solid #eee;
}
.firm-center-money{
    padding:0 3px;
    color: #ff0000;
    border-right: 1px solid #eee;
}
.center-city:last-of-type{
    border-right: none;
}
.firm-tempt{
    font-size: 0.8rem;
    color: #999;
}
.praise{
    position: relative;
    float: left;
    width: calc(15% - 1px);
    border-left: 1px solid #eee;
}

.firm-bottom{
    width: 100%;
}
.tabshow{
    width: 94%;
    padding: 0 3%;
    background: #fff;
    margin-bottom: 10px;
}
.line{
  width: 80%;
  height: 15px;
  padding: 30px 0 0 0;
  margin:15px auto 30px auto;
  border-bottom: 1px solid #eee;
}
.you{
  margin:  0 auto;
  width: 60%;
  background: #fff;
  text-align: center;
  font-size: 1rem;
  color: #000;
}
.describe{
    width: 100%;
    display: flex;
    flex-wrap: wrap; 
    justify-content: center;
}
.describe-list{
    padding: 0 10px;
    margin: 5px;
    border: 1px solid #eee;
    border-radius:0.7rem;
    line-height:1.4rem;
    font-size: 0.8rem;
    color: #999;
}
.firm-bottom-referral{
    margin-top: 10px;
    width:100%;
}
.firm-message-bottom{
    line-height: 1.2rem;
    font-size: 0.8rem;
    color: #999;
}

navigator{
    display: inline-block;
    font-size:1rem;
    color:#333;

}
.firm-bottom-city{
    width: 100%;
    padding-bottom: 10px;
    margin-bottom: 10px;
}
.firm-bottom-land{
    margin-top: 10px;
    width: 100%;
    height: 50px;
}
.ranking{
    position: relative;
    float: left;
    width: 30px;
}
.icon-dingwei{
    position: absolute;
    left: 0;
    top: 0;
    font-size: 1.2rem;
    color: #00b380;
}
.ranking-number{
    display: inline-block;
    position: absolute;
    left: 0;
    top: 0;
    width: 1.2rem;
    height: 1.2rem;
    line-height: 1.2rem;
    text-align: center;
    font-size: 0.7rem;
    color: #fff;
}
.site{
    float: right;
    width: calc(100% - 30px);
    height:60px;
    border-bottom: 1px dashed #ccc;
}
.firm-bottom-land:last-of-type .site{
    border-bottom: none;
}
.calm{
    font-size:1rem;
    color:#666;
}
.site_city{
    margin-top: 5px;
    font-size:0.8rem;
    color:#999;
}
.icon-jiankuohaoxiyou{
    float: right;
}
.firm-bottom-land:last-of-type .site{
    border-bottom: none;
}
.firm-bottom-interview{
    margin-top: 10px;
    overflow: hidden;
}
.evaluate{
    text-align: center;
    font-size: 1rem;
    color: #999;
}
.evaluate_number{
    color: #ff9700;
}
.evaluate-left{
    float: left;
}
.evaluate-left image{
    width: 30px;
    height: 30px;
    border-radius: 50%;
}
.evaluate-right{
    padding-bottom: 20px;
    float: right;
    width: calc(100% - 40px);
    border-bottom: 1px solid #eee;
}
.evaluate-right-top{
    width: 100%;
}
.five{
    float: right;
    margin-left: 2px;
    width: 15px;
    height: 15px;
}
.evaluate-right-list{
    margin: 8px 0;
    overflow: hidden;
}
.evaluate-list{
    float: left;
    padding: 0 6px;
    margin-right: 4px;
    border: 1px solid #ccc;
    border-radius:0.5rem;
    line-height:1rem;
    font-size: 0.6rem;
    color: #999;
}
.calm-top {
    font-size:1rem;
    color:#333;
    font-weight: bold;
}
.site_job{
    display: inline-block;
    width: 70%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size:0.8rem;
    color:#999;
}
.site_time{
    float: right;
    font-size:0.7rem;
    color:#999;
}
.appraise-list{
    font-size:0.8rem;
    color:#666;
    line-height: 1rem;
}
.appraise-list.h{
    font-size:0.8rem;
    color:#666;
    line-height: 1rem;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp:3;
    -webkit-box-orient: vertical;
}
.open{
    float: right;
    height: 1rem;
    width: 2.4rem;
    display: flex;
    align-items:center;
    justify-content: center;
}
.open text{
    font-size: 0.8rem;
    color: #00b380;
}
.powered{
    line-height: 2rem;
    font-size: 0.6rem;
    color: #999;
    text-align: center;
}
.center{
    padding: 10px 0;
    border-bottom: 1px solid #eee;
}
.center:last-of-type{
    border-bottom:none;
}
.icon-namber{
  color: #fff;
  font-size: 1rem;
  text-align: center;
}
.center-img{
  width: 60px;
  height: 60px;
  border: 1px solid #f5f5f5;
}
.center-img image{
  width: 60px;
  height: 60px;
}
.center-job{
    display: inline-block;
    width: 80%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 1rem;
}
.center-money{
  float: right;
  color: #ff0000;
  font-size: 0.8rem;
}
.center-name{
  font-size: 0.8rem;
  color: #666;
}
.center-job-city{
  margin-right: 0.5rem;
  font-size: 0.8rem;
  color: #999;
}
.center-msg-bottom{
  font-size: 1rem;
  color: #999;
}
.center-line{
  margin: 0 2%;
  color: #ddd;
}
.center-issue{
  float: right;
  margin-top:0.1rem;
  color: #999;
  font-size: 0.8rem;
}
.firm-top-border .firm-top-right .firm-name navigator{
    font-size: 0.8rem;
    color: #666
}
.firm-top-border .firm-top-right .firm-message .center-city{
    font-size: 0.7rem;
    color: #999;
}
.look-more{
    color: #00b380;
}
.look-more-hover{
    color: rgba(0,179,128,0.6);
}
.tabshow-bottom{
    padding-bottom: 20px;
}
.footer{
  text-align: center;
  color: #999;
  font-size: 0.8rem;
  height: 60px;
}
.share-fixed{
    padding: 10px 0;
    width: 100%;
    height: 40px;
    background: rgba(255,255,255,0.95);
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-around;  
    align-items: center;  
}
.share-small{
    font-size: 1rem;
    text-align: center;
    min-width: 2rem;
}
.share-small .iconfont{
    font-size: 1rem;
}
.share-small view{
    font-size: 0.6rem;
}
.fenxiang{
    color: #00b380;
}
.shoucang{
    color: #666;
}
.icon-xing1,.shoucang.h{
    color: #ff9700;
}
button[type="primary"] {
    color:#FFFFFF;
    background-color:#00b380;
    width: 180px;
    line-height: 40px;
    font-size: 0.8rem;
}
.button-hover[type="primary"] {
    color:rgba(255, 255, 255, 0.6);
    background-color:#00b380;
}

.share{
	width: 100%;
	line-height:18px;
	display: flex;
    align-items:center;
    justify-content: space-between;
	background: #fff;
    padding: 14px;
}
action-sheet-item{
    padding: 0;
    border-top:1px solid #D9D9D9;

}
.share image{
	width: 26px;
	height: 26px;
}
.share view:nth-child(2){
	width: 80%;
	margin-left: 20px;
	font-size:14px;
	text-align: left;
	display:table-cell; vertical-align:middle;
}
.share view:nth-child(2) .font{
	font-size:10px;
	text-align: left;
	color: #999;
}
.share .icon-jiankuohaoxiyou{
  font-size:12px;
  color: #ccc;
}
action-sheet-cancel{
	font-size:14px;
}
.canvas{
    position: fixed;
    top: 5200%;
    left: 0;
    z-index: -100;
}
#myCanvas{
    width:750px;
    height:1227px;
}
#myCanvas-two{
    width:623px;
    height:323px;
}
.button-hover{
  background-color: #ffffff;
}
.toast-center {  
  position: fixed;
  top: 0;
  left: 0;  
  z-index: 9999999;  
  width: 100%;  
  height: 100%;  
  text-align: center;  
}  
.toast {  
    margin-top: 45%;
    display: inline-block;  
    padding: 20rpx 40rpx;  
    max-width: 600rpx;  
    font-size: 28rpx;  
    color: #fff;  
    background: rgba(0, 0, 0, .5);  
    border-radius: 10rpx;  
    text-align: center;  
}
.cover-view-job{
    margin-top: 50px;
}