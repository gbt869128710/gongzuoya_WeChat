/* pages/login/login.wxss */
/*mask*/
.drawer_screen { 
 width: 100%; 
 height: 100%; 
 position: fixed; 
 top: 0; 
 left: 0; 
 z-index: 1000; 
 background: #000; 
 opacity: 0.5; 
 overflow: hidden; 
} 
  
/*content*/
.drawer_box { 
 width: 70%; 
 overflow: hidden; 
 position: fixed; 
 top: 50%; 
 left: 50%; 
 margin-top:-30%;
 margin-left:-35%;
 z-index: 1001; 
 background: #FAFAFA; 
 border-radius: 3px; 
} 
  
.drawer_title{ 
 padding:15px; 
 font-size: 0.8rem; 
 text-align: center; 
} 
.drawer_content { 
 height:130px; 
 overflow-y: scroll; /*超出父盒子高度可滚动*/
} 
.drawer_content button{
  width: 80%;
  height: 40px;
  line-height: 40px;
  font-size: 0.8rem;
}
.btn_ok{ 
 padding: 10px; 
 font: 1rem "microsoft yahei"; 
 text-align: center; 
 border-top: 1px solid #E8E8EA; 
 color: #3CC51F; 
} 
.rest{
  margin-top: 10px;
  font-size: 0.6rem;
  text-align: center;
}
.phone{
  margin-top: 10px;
  border: 1px solid #999;
  background: #eee;
}